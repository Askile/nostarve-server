{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["index.ts", "tests.ts"],
  "exclude": ["node_modules"]
}
